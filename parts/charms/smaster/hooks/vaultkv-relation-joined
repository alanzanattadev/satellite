#!/usr/bin/env python

from charmhelpers.core.hookenv import unit_get, relations, relation_ids
import requests
import json

address = unit_get("public-address")
relation = relations()
idMessageBroker = relation_ids()[0]
header = {"Content-Type": "application/json"}
payload = {"service": "vault", "public-address": address, "host": relation["vaultkv"][idMessageBroker]["vault/0"]["private-address"], "port": relation["vaultkv"][idMessageBroker]["vault/0"]["port"]}
requests.post("https://test-api-ddlrzsfdsc.now.sh/", headers=header, data=json.dumps(payload)
