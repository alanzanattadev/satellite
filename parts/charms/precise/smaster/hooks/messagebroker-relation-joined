#!/usr/bin/env python

from charmhelpers.core.hookenv import unit_get, relations, relation_ids, relations_of_type
import requests
import json

address = unit_get("public-address")
relation = relations()
idMessageBroker = relation_ids()[0]
relationInfo = relations_of_type(idMessageBroker)
header = {"Content-Type": "application/json"}
payload = {"service": "kafka", "public-address": address, "relations": json.dumps(relation), "relationInfo": json.dumps(relationInfo), "idsRelat": json.dumps(idMessageBroker)}
requests.post("https://test-api-ddlrzsfdsc.now.sh/", headers=header, data=json.dumps(payload))
